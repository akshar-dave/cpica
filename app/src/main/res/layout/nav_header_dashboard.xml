<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/side_nav_bar"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    >

    <ImageButton
        android:layout_marginTop="35dp"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"
        android:background="@drawable/user_profile_icon_bg"
        android:padding="15dp"
        android:id="@+id/user_profile_icon"/>

    <ImageButton
        android:id="@+id/acc_settings_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/usersname"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/settings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mahavir\nJinjuwadia"
        android:textSize="10.5pt"
        android:textColor="#f9f9f9"
        android:layout_marginStart="15dp"
        android:id="@+id/usersname"
        android:layout_alignTop="@+id/user_profile_icon"
        android:layout_toEndOf="@+id/user_profile_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/usersname"
        android:background="@drawable/username_bg"
        android:layout_alignBottom="@+id/user_profile_icon"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="TYA16"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="7.5pt"
        android:textStyle="bold"
        android:id="@+id/username"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG OUT"
        android:textSize="8.5pt"
        android:textStyle="bold"
        android:background="#00000000"
        android:textColor="#f9f9f9"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/username"
        android:id="@+id/logout_btn"/>

    </RelativeLayout>
