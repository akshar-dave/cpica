<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup_email_nextbtn"
        app:fabSize="normal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#1e623d"
        android:backgroundTint="#1e623d"
        android:elevation="6dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/arrow_forward"
        app:rippleColor="#f6f6f6"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/signup_email_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="125dp"
        android:text="Enter your\nemail address"
        android:textAlignment="textStart"
        android:textColor="#181818"
        android:textSize="14pt"
        android:layout_alignEnd="@+id/signup_email_nextbtn" />

    <ImageView
        android:id="@+id/signup_email_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/email"
        android:layout_alignBottom="@+id/signup_email_title"
        android:layout_alignStart="@+id/signup_email_title"
        android:layout_marginBottom="90dp" />

    <TextView
        android:id="@+id/signup_email_needhelp_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need Help?"
        android:textSize="8.5pt"
        android:paddingBottom="16dp"
        android:paddingLeft="10dp"
        android:onClick="show_usertype_help"
        android:paddingRight="10dp"
        android:paddingTop="16dp"
        android:textColor="#666666"
        android:layout_alignBottom="@+id/signup_email_nextbtn"
        android:layout_alignStart="@+id/signup_email_title" />

    <EditText
        android:id="@+id/signup_email_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="example@mail.com"
        android:layout_marginTop="20dp"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:textSize="9pt"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/signup_email_title"
        android:layout_alignStart="@+id/signup_email_title"
        android:layout_alignEnd="@+id/signup_email_title" />

    <TextView
        android:id="@+id/signup_email_error"
        android:alpha="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email error"
        android:textSize="7pt"
        android:textColor="#ff5252"
        android:layout_below="@id/signup_email_box"
        android:layout_alignStart="@id/signup_email_box"
        android:layout_alignEnd="@id/signup_email_nextbtn"/>


</RelativeLayout>