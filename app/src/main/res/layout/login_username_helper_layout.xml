<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Class:"
        android:id="@+id/class_text"
        android:padding="15dp"
        android:textSize="8.5pt"
        android:textColor="#212121"/>

    <Spinner
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="50dp"
        android:padding="15dp"
        android:textColor="#212121"
        android:id="@+id/login_username_helper_class"
        android:layout_toEndOf="@+id/class_text"
        android:layout_alignBottom="@+id/class_text"
        android:entries="@array/Classes"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Division:"
        android:id="@+id/division_text"
        android:layout_below="@id/class_text"
        android:padding="15dp"
        android:textSize="8.5pt"
        android:textColor="#212121"/>

    <Spinner
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="50dp"
        android:padding="15dp"
        android:textColor="#212121"
        android:id="@+id/login_username_helper_division"
        android:layout_toEndOf="@+id/division_text"
        android:layout_alignBottom="@+id/division_text"
        android:entries="@array/Divisions"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_below="@id/division_text"
        android:hint="Roll no."
        android:layout_marginTop="5dp"
        android:textColor="#212121"
        android:inputType="number"
        android:maxLength="3"
        android:id="@+id/login_username_helper_roll_no"/>

</RelativeLayout>